{% extends "::layout/layout.html.twig" %}        

{% block body %}
    <div class="container">
        <div class="row">
            <h4 style='text-align: center'>Vous êtes entrain de modifier cette Infraction</h4>
            {{ form_start(form, {'attr': {'class': 'form-vertical'}}) }}
            <div class="span3">
                {{ include('includeTexte/teste.html.twig') }}

            </div>
            <div class="span3">

                <div class="box-body">
                    <div class="form-group">
                        {{ form_label(form.categorie, "Choisir une Categorie") }}
                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.categorie) }}
                        {# Génération de l'input. #}
                        {{ form_widget(form.categorie) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.typeInfraction, "type Infraction ") }}
                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.typeInfraction) }}
                        {# Génération de l'input. #}
                        {{ form_widget(form.typeInfraction) }}
                    </div>

                </div>
                <button class="btn btn-primary" style="width: 520px;">

                    Enregistrer et Terminer
                </button>
            </div>

            <div class="span3">

                <div class="box-body">

                    <div class="form-group">
                        {{ form_label(form.nomInfraction, "Nom Infraction") }}
                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.nomInfraction) }}
                        {# Génération de l'input. #}
                        {{ form_widget(form.nomInfraction, {'attr': {'class': 'form-control', 'placeholder':'nomInfraction'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.amende, "Amende") }}
                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.amende) }}
                        {# Génération de l'input. #}
                        {{ form_widget(form.amende) }}
                    </div>

                </div>

            </div>  
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
