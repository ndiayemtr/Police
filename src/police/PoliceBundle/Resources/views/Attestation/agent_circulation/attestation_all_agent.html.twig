{% extends "::layout/layout.html.twig" %}        

{% block body %}
    <div class="container">
        <div class="row">
            
            <div class="span3">
                {{ include('includeTexte/teste.html.twig') }}

            </div>

            <div class="span9">
                <h2 style='text-align: center'> Attestation</h2>
