                                  <td style="text-align: center"> {{ attestation.date|date('d/m/Y') }} </td>
                                  <td style="text-align: center"> {{ attestation.date|date('d/m/Y') }} </td>
                                  <td style="text-align: center"> <a href="{{ path('police_attestation_view_agent', { 'id' : attestation.id }) }}" target="_bank"><i class="icon-eye-open"></i></a> </td>

                                </tr>
                            {%endfor%}
                        {%endif%}

                    </tbody>
                    </table>
                                    
                        <div class="row">
                            <div class="col-md-12 text-center">
                                
                                    <div class="pagination text-center">
                                        
                                        <ul>
                                            {% for p in range(1, nbrTotalPages) %}
                                            <li{% if p == page %} class="active"{% endif %}>
                                                <a href="{{ path('police_attestation_policier', {'page': p}) }}">{{ p }}</a>
