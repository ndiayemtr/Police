                                             {% endfor %}
                                        </ul>
                                    </div>
                               
                            </div>
                        </div>
                                        
                                             <a class="icon-arrow-left" style="text-decoration: none; color: blue;" href="{{ path('police_attestation') }}">
                                    Retour
                                </a>                   
            </div>


        </div>

    {% endblock %}
